-- Indicaciones BDD
Las credenciales estan escritas en el archivo src/main/resources/application.properties


-- CREACION USUARIO

ALTER SESSION SET "_Oracle_Script"=TRUE;

CREATE USER MOVIESAPI
IDENTIFIED BY "Movies_Api_2024"
DEFAULT TABLESPACE USERS
TEMPORARY TABLESPACE TEMP
QUOTA UNLIMITED ON USERS;

GRANT CREATE SESSION, RESOURCE TO MOVIESAPI;

ALTER USER MOVIESAPI 
DEFAULT ROLE RESOURCE;


-- CREACION TABLA + 1 PELICULA

CREATE TABLE movie (
    idmovie NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
    namemovie VARCHAR2(255),
    anio NUMBER(4),
    director VARCHAR2(255),
    genre VARCHAR2(255),
    synopsis VARCHAR2(1000)
);

insert into movie (namemovie, anio, director, genre, synopsis) VALUES ('Shrek', 2000, 'Dream Works', 'Animada', 'Un burro y un ogro rescatan a una princesa');


!ATENCION!
Nota: Revisar la linea 7 del archivo appication.properties por la version de BDD, esta puesto "xe" modificar en caso de tener otra version.